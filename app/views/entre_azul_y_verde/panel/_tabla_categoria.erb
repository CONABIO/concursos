<% @dibujos.each do |categorias, dibujos| %>
	<div class="col-4 table-responsive">
		<table class="table table-dark table-striped table-bordered table-hover table-sm">
			<thead>
			<tr>
				<th colspan="3">
					<%= categorias.to_s.humanize %>
				</th>
			</tr>
			<tr>
				<th scope="col">ID</th>
				<th scope="col">Primeros trazos</th>
				<th scope="col">Dibujo finalizado</th>
			</tr>
			
			</thead>
			<tbody>
			<% dibujos.each do |d| %>
				<tr>
					<th scope="row"><small><%= d.id %></small></th>
					<td>
						<a tabindex="0" class="btn btn-outline-info dibujos_popover" role="button" data-toggle="popover" title="Dibujo en proceso" data-content="<img class='img-fluid' src='<%= "/media/ayv/#{d.id}/#{d.proceso}" %>'>" href='<%= "/media/ayv/#{d.id}/#{d.proceso}" %>' target="_blank">Proceso</a>
					</td>
					<td>
						<a tabindex="0" class="btn btn-outline-success dibujos_popover" role="button" data-toggle="popover" title="Dibujo terminado" data-content="<img class='img-fluid' src='<%= "/media/ayv/#{d.id}/#{d.terminado}" %>'>" href='<%= "/media/ayv/#{d.id}/#{d.terminado}" %>' target="_blank">Terminado</a>
					</td>
				</tr>
			<% end %>
			</tbody>
		</table>
	</div>
<% end %>


