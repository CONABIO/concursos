<div id="inscripcion" class="row justify-content-center mt-5 pt-4">
  <%= render partial: "entre_azul_y_verde/shared/sub-header", locals: { title: "INICIA SESESIÓN" } %>
	
	<div class="col-12 col-xl-8 py-4 text-center">
		
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: "Correo",
                    input_html: { autocomplete: "email"} %>
        <%= f.input :password,
                    required: false,
                    label: "Contraseña",
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean, label: "Recordarme" if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Inicia sesión", class: "btn btn-md btn-success mb-4" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
	</div>

</div>


