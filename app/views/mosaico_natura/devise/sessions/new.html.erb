<div id="inscripcion" class="bg-dark border-bottom border-light text-light justify-content-center mt-5 pb-5 row">
	<%= render partial: "mosaico_natura/shared/sub-header", locals: { title: "INICIA SESIÓN" } %>
	<div class="col-12 col-xl-8 py-4 text-center">
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="form-inputs">
				<%= f.input :email,
				            required: false,
				            autofocus: true,
				            label: "Correo",
				            input_html: { autocomplete: "email"} %>
				<%= f.input :password,
				            required: false,
				            label: "Contraseña",
				            input_html: { autocomplete: "current-password" } %>
				<%= f.input :remember_me, as: :boolean, label: "Recordarme" if devise_mapping.rememberable? %>
			</div>
			
			<div class="form-actions">
				<%= f.button :submit, "Inicia sesión", class: "btn btn-block btn-success mb-4" %>
			</div>
		<% end %>
		<%= render "mosaico_natura/devise/shared/links" %>
	</div>
</div>
