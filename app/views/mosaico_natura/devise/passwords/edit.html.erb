<div id="inscripcion" class="bg-dark border-bottom border-light text-light justify-content-center mt-5 pb-5 row">
	<%= render partial: "mosaico_natura/shared/sub-header", locals: { title: "CAambia tu contrase単a" } %>
	<div class="col-12 col-xl-8 py-4 text-center">
		<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
			<%= f.error_notification %>
			<%= f.input :reset_password_token, as: :hidden %>
			<%= f.full_error :reset_password_token %>
			<div class="form-inputs">
				<%= f.input :password,
				            label: "Nueva contrase単a",
				            required: true,
				            autofocus: true,
				            hint: ("#{@minimum_password_length} caracteres minimo" if @minimum_password_length),
				            input_html: { autocomplete: "new-password" } %>
				<%= f.input :password_confirmation,
				            label: "Confirma la nueva contrase単a",
				            required: true,
				            input_html: { autocomplete: "new-password" } %>
			</div>
			<div class="form-actions">
				<%= f.button :submit, "Cambiar mi contrase単a", class: "btn btn-success mb-4" %>
			</div>
		<% end %>
		<%= render "mosaico_natura/devise/shared/links" %>
	</div>
</div>
